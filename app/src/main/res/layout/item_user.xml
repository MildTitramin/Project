<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="0dp">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_name_text_view"
        android:layout_width="174dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mfg_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/text_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.544"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Product" />

    <TextView
        android:id="@+id/bbe_text"
        android:layout_width="173dp"
        android:layout_height="22dp"
        android:background="#1CD4B9"
        android:gravity="center"
        android:text="textview"
        app:layout_constraintBottom_toTopOf="@+id/mfg_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/exp_text_view"
        android:layout_width="173dp"
        android:layout_height="22dp"
        android:layout_marginTop="3dp"
        android:background="#FF5722"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mfg_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mfg_text_view"
        app:layout_constraintTop_toBottomOf="@+id/mfg_text_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/mfg_text_view"
        android:layout_width="173dp"
        android:layout_height="22dp"
        android:layout_marginTop="3dp"
        android:background="#FFEB3B"
        android:gravity="center|center_horizontal"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/exp_text_view"
        app:layout_constraintEnd_toEndOf="@+id/bbe_text"
        app:layout_constraintStart_toStartOf="@+id/bbe_text"
        app:layout_constraintTop_toBottomOf="@+id/bbe_text"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>